generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

//define the Product model
model Product {
  id   String @map("productID") @id @default(uuid()) 
  productName String @map("productName")
  productDescription String @map("productDescription")
  unitsLeft Int @map("unitsLeft")
  isDeleted Boolean @map("isDeleted") @default(false)
  createdAt DateTime @map("createdAt") @default(now())
  updatedAt DateTime @map("updatedAt") @updatedAt

@@map("Products_Table")
}
